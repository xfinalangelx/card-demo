<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.DeckViewController">
    <children>
      <ImageView fitHeight="522.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/table.jpg" />
         </image>
      </ImageView>
        <HBox layoutX="24.0" layoutY="29.0" spacing="20.0">
            <children>
                <ImageView fx:id="deckImageView" fitHeight="322.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                <ImageView fx:id="activeCardImageView" fitHeight="322.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                <StackPane>
                    <children>
                        <Button fx:id="nextCardButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#nextCardButtonPushed" stylesheets="@../css/style.css" text="Next Card" textAlignment="CENTER">
                            <font>
                                <Font name="Dubai Medium" size="18.0" />
                            </font>
                        </Button>
                    </children>
                </StackPane>
            </children>
        </HBox>
      <Text fill="#7d7243" layoutX="78.0" layoutY="373.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Back of Card">
         <font>
            <Font name="Dubai Medium" size="19.0" />
         </font>
      </Text>
    </children>
</AnchorPane>
